# OpenAI API Key for AI-powered data extraction
OPENAI_API_KEY=your_openai_api_key_here

# Scraping Configuration
SCRAPING_DELAY_MS=1000
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT_MS=30000

# Database Configuration (if using database)
DATABASE_URL=file:./scraped_data.db

# Output Configuration
OUTPUT_DIR=./output
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# User Agent
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# Proxy Configuration (optional)
# PROXY_SERVER=http://proxy.example.com:8080
# PROXY_USERNAME=username
# PROXY_PASSWORD=password

# Email Configuration for notifications (optional)
# EMAIL_SERVICE=gmail
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASS=your_app_password
# EMAIL_TO=admin@example.com

# Slack Configuration for notifications (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# SLACK_CHANNEL=#scraping-alerts

# Monitoring
ENABLE_MONITORING=true
MONITORING_INTERVAL_MS=60000

# Error Handling
MAX_RETRIES=3
RETRY_DELAY_MS=5000

# Data Validation
ENABLE_DATA_VALIDATION=true
VALIDATION_STRICT_MODE=false

# Cleanup
AUTO_CLEANUP_OLD_FILES=true
CLEANUP_AFTER_DAYS=30



